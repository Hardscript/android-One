<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="au.com.advproj.testapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission
            android:name="android.permission.SET_WALLPAPER"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >


        //Splash Screen
        <activity
                android:name="au.com.advproj.testapp.Splash"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //Menu
        <activity
                android:name="au.com.advproj.testapp.Menu"
                android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.Menu" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        //MainActivity
        <activity
                android:name="au.com.advproj.testapp.MainActivity"
                android:label="@string/app_name" >
        </activity>

        //TextPlay
        <activity
                android:name="au.com.advproj.testapp.TextPlay"
                android:label="@string/app_name" >
        </activity>

        //Camera
        <activity
                android:name="au.com.advproj.testapp.Camera"
                android:label="@string/app_name"
                android:screenOrientation="portrait">
        </activity>

        //ScrollViewMenu
        <activity
                android:name=".Email"
                android:label="@string/app_name" >
        </activity>

    </application>
</manifest>
